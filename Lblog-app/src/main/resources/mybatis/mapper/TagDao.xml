<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.lbwxxc.infrastructure.dao.TagDao">
    <resultMap id="BaseResultMap" type="top.lbwxxc.infrastructure.dao.po.Tag">
        <id column="id" jdbcType="BIGINT" property="id" />
        <result column="name" jdbcType="VARCHAR" property="name" />
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
        <result column="is_deleted" jdbcType="TINYINT" property="isDeleted" />
    </resultMap>

    <sql id="Base_Column_List">
        id, `name`, create_time, update_time, is_deleted
    </sql>

    <select id="selectByPrimaryKey" parameterType="java.lang.Long" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from tag
        where id = #{id,jdbcType=BIGINT}
    </select>

    <delete id="deleteByPrimaryKey" parameterType="java.lang.Long">
        delete from tag
        where id = #{id,jdbcType=BIGINT}
    </delete>

    <insert id="insert" keyColumn="id" keyProperty="id" parameterType="top.lbwxxc.infrastructure.dao.po.Tag" useGeneratedKeys="true">
        insert into tag (`name`, create_time, update_time, is_deleted)
        values (#{name,jdbcType=VARCHAR}, #{createTime,jdbcType=TIMESTAMP}, #{updateTime,jdbcType=TIMESTAMP},
                #{isDeleted,jdbcType=TINYINT})
    </insert>

    <insert id="insertSelective" keyColumn="id" keyProperty="id" parameterType="top.lbwxxc.infrastructure.dao.po.Tag" useGeneratedKeys="true">
        insert into tag
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null">
                `name`,
            </if>
            <if test="createTime != null">
                create_time,
            </if>
            <if test="updateTime != null">
                update_time,
            </if>
            <if test="isDeleted != null">
                is_deleted,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null">
                #{name,jdbcType=VARCHAR},
            </if>
            <if test="createTime != null">
                #{createTime,jdbcType=TIMESTAMP},
            </if>
            <if test="updateTime != null">
                #{updateTime,jdbcType=TIMESTAMP},
            </if>
            <if test="isDeleted != null">
                #{isDeleted,jdbcType=TINYINT},
            </if>
        </trim>
    </insert>

    <update id="updateByPrimaryKeySelective" parameterType="top.lbwxxc.infrastructure.dao.po.Tag">
        update tag
        <set>
            <if test="name != null">
                `name` = #{name,jdbcType=VARCHAR},
            </if>
            <if test="createTime != null">
                create_time = #{createTime,jdbcType=TIMESTAMP},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime,jdbcType=TIMESTAMP},
            </if>
            <if test="isDeleted != null">
                is_deleted = #{isDeleted,jdbcType=TINYINT},
            </if>
        </set>
        where id = #{id,jdbcType=BIGINT}
    </update>

    <update id="updateByPrimaryKey" parameterType="top.lbwxxc.infrastructure.dao.po.Tag">
        update tag
        set `name` = #{name,jdbcType=VARCHAR},
            create_time = #{createTime,jdbcType=TIMESTAMP},
            update_time = #{updateTime,jdbcType=TIMESTAMP},
            is_deleted = #{isDeleted,jdbcType=TINYINT}
        where id = #{id,jdbcType=BIGINT}
    </update>

    <select id="selectTagByPageAndData" resultMap="BaseResultMap">
        select *
        from tag
        where is_deleted = 0
        <if test="startDate != null and endDate != null">
            and date(create_time) between #{startDate} and #{endDate}
        </if>
        <if test="name != null and name != ''">
            and name like concat('%', #{name}, '%')  <!-- 拼接%实现模糊匹配，仅当name非空时生效 -->
        </if>
        order by id desc
        limit #{offset}, #{pageSize}
    </select>

    <update id="logicalDelete">
        update tag
        set is_deleted = '1'
        where id = #{id}
    </update>

    <select id="selectTagAll" resultMap="BaseResultMap">
        select *
        from tag
        where is_deleted = 0
    </select>

    <select id="selectTagSize">
        select count(1)
        from tag
        where is_deleted = 0
    </select>

    <insert id="insetTags" parameterType="java.util.List" useGeneratedKeys="true" keyProperty="id">
        insert into tag (name, create_time, update_time, is_deleted)
        values
            <foreach collection="tags" item="tag" separator=",">
                (#{tag.name}, #{tag.createTime}, #{tag.updateTime}, 0)
            </foreach>
    </insert>

    <select id="selectTagByNae" resultMap="BaseResultMap">
        select *
        from tag
        where is_deleted = 0
        <if test="name != null and name != ''">
            and name like concat('%', #{name}, '%')  <!-- 拼接%实现模糊匹配，仅当name非空时生效 -->
        </if>
    </select>

    <select id="selectTagsById" resultMap="BaseResultMap">
        select *
        from tag
        <where>
            <!-- 2. 核心优化：ids为空时，用 1=0 让条件失效，返回空结果 -->
            <choose>
                <when test="ids != null and ids.size() > 0">
                    id in
                    <foreach collection="ids" item="id" separator="," open="(" close=")">
                        <!-- 3. 过滤 ids 中的 null 元素，避免生成 null 值 -->
                        <if test="id != null">#{id}</if>
                    </foreach>
                    and is_deleted = 0
                </when>
                <otherwise>
                    1 = 0
                </otherwise>
            </choose>
        </where>
    </select>
</mapper>